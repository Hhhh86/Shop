<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
    <context id="MysqlContext" targetRuntime="MyBatis3Simple" defaultModelType="flat">
        <property name="beginningDelimiter" value="`"/>
        <property name="endingDelimiter" value="`"/>

        <plugin type="tk.mybatis.mapper.generator.MapperPlugin">
            <property name="mappers" value="wushanqiyong.shop.utils.MyMapper"/>
        </plugin>

        <jdbcConnection driverClass="com.mysql.jdbc.Driver"
                        connectionURL="jdbc:mysql://localhost:3306/tuoguan_marker"
                        userId="root"
                        password="199986">
        </jdbcConnection>

        <!-- 对于生成的pojo所在包 -->
        <javaModelGenerator targetPackage="wushanqiyong.shop.pojo" targetProject="src/main/java"/>

        <!-- 对于生成的mapper所在目录 -->
        <sqlMapGenerator targetPackage="mapper" targetProject="src/main/resources"/>

        <!-- 配置mapper对应的java映射 -->
        <javaClientGenerator targetPackage="wushanqiyong.shop.mapper" targetProject="src/main/java"
                             type="XMLMAPPER"/>

        <table tableName="tuoguan_comment" domainObjectName="Comment"></table>
        <table tableName="tuoguan_database_bak" domainObjectName="DatabaseBak"></table>
        <table tableName="tuoguan_goods" domainObjectName="Goods"></table>
        <table tableName="tuoguan_goods_category" domainObjectName="GoodsCategory"></table>
        <table tableName="tuoguan_menu" domainObjectName="Menu"></table>
        <table tableName="tuoguan_news" domainObjectName="News"></table>
        <table tableName="tuoguan_operater_log" domainObjectName="OperaterLog"></table>
        <table tableName="tuoguan_report_goods" domainObjectName="ReportGoods"></table>
        <table tableName="tuoguan_role" domainObjectName="Role"></table>
        <table tableName="tuoguan_role_authorities" domainObjectName="RoleAuthorities"></table>
        <table tableName="tuoguan_site_setting" domainObjectName="SiteSetting"></table>
        <table tableName="tuoguan_student" domainObjectName="Student"></table>
        <table tableName="tuoguan_user" domainObjectName="User"></table>
        <table tableName="tuoguan_wanted_goods" domainObjectName="WantedGoods"></table>

    </context>
</generatorConfiguration>
